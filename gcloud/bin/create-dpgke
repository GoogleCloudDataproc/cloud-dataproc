# Exit on failure
set -e


source lib/env.sh

parse_args "$@"

if (( DEBUG != 0 )); then
  set -x
fi

# Source function files
source lib/misc.sh
source lib/gcp/gcs.sh
source lib/gcp/misc.sh
source lib/network/network.sh
source lib/network/subnet.sh
source lib/network/router.sh
source lib/network/firewall.sh
source lib/gcp/iam.sh
source lib/gke.sh # Assuming gke functions will be here

set_cluster_name

create_bucket

enable_services

create_vpc_network

# create_ip_allocation
# create_vpc_peering

# Create a cloud router

create_router

add_nat_policy

create_subnet

create_firewall_rules

create_service_account

grant_gke_roles

if [[ "${CREATE_CLUSTER}" = true ]]; then
  print_status "Creating GKE Cluster ${GKE_CLUSTER_NAME}..."
  if create_gke_cluster; then
    print_result "Pass"
  else
    print_result "Fail"
    exit 1
  fi

  print_status "Creating Dataproc on GKE Cluster ${DPGKE_CLUSTER_NAME}..."
  if create_dpgke_cluster; then
    print_result "Pass"
  else
    print_result "Fail"
    exit 1
  fi
else
  echo -e "${YELLOW}Skipping Cluster Creation due to --no-create-cluster flag.${NC}"
fi

# Perform some connectivity tests

# perform_connectivity_tests

